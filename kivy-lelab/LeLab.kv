BoxLayoutExemple:
<BoxLayoutExemple>:
    orientation: "vertical"
    Button:
        text: "A"
        # None pour pouvoir utiliser size ou width et height
        size_hint: 0.5, None
        # size: "100dp", "60dp"
        height: "60dp"
        # x, right, center_x
        # y, top, center_y
        #pos_hint: {"x": 0.5}
        # équivalent x:0.5 -> right:1 -> center_x: 0.75
        pos_hint: {"right": 1}
    Button:
        text: "B"
        size_hint: 1, 2
    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "60dp"
        pos: "200dp", "100dp"
        # R, V, B, A de 0 à 1
        color: 0, 0, 1, 1

    Label:
        text: "Hello2"
        size: "100dp", "60dp"
        pos: "400dp", "200dp"
        color: 1, 0, 0, 1
