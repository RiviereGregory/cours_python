# permet d'importe d'autre fichier kv pour structurer le code
#:import layout_exemples layout_exemples
#:import widget_exemples widget_exemples
#:import navigation_screen_manager navigation_screen_manager

MyScreenManager:

<MyScreenManager@NavigationScreenManager>:
    Screen:
        name: "screen1"
        BoxLayout:
            Button:
                text: "Aller vers écran image"
                # utilisation des méthode défini dans navigation_screen_manager
                on_press: root.push("ImagesExemple")
            Button:
                text: "Aller vers écran 2"
                # utilisation des méthode défini dans navigation_screen_manager
                on_press: root.push("screen2")
    Screen:
        name: "ImagesExemple"
        BoxLayout:
            orientation: "vertical"
            ActionBar:
                ActionView:
                    ActionPrevious:
                        title: "Images"
                        on_release: root.pop()
                        app_icon: "images/lab_logo.png"
                        app_icon_height: "28dp"
                        app_icon_width: "28dp"
            ImagesExemple:
    Screen:
        name: "screen2"
        Button:
            text: "Button2"
            # utilisation des méthode défini dans navigation_screen_manager
            on_press: root.pop()
    Screen:
        name: "screen3"
        Button:
            text: "Button3"
            # utilisation des méthode défini dans navigation_screen_manager
            on_press: root.pop()