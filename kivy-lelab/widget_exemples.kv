<WidgetsExemple>:
    cols: 3
    ToggleButton:
        text: "OFF"
        # Clique sur le toggleButton est récupéré par le on_state
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Compter"
        # Clique bouton (on_press) qui appelle la fonction def dans le code python
        # root car la fonction est dans la class WidgetsExample
        on_press: root.on_button_click()
        disabled: not root.compteur_actif
    Label:
    # récupération de la variable defini dans la class WidgetsExample
        text: root.mon_texte
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, 0.5, 1, 1

    Switch:
        id: mon_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: mon_slider
        min: 0
        max: 100
        value: 50
        orientation: "vertical"
        disabled: not mon_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
        # récupération de l'ID defini dans la slider
            text: str(int(mon_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "80dp"
            color: 0, 1, 0, 1
        ProgressBar:
            max: 100
            value: mon_slider.value

    TextInput:
        size_hint: None, 1
        width: "100dp"
        text: "Toto"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Vous êtes : " +root.text_input_str

