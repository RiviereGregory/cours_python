
# d√©finir des variable dasn le fichier kv
#:set s dp(150)

<CanvasExemple1>:
    canvas:
        Rectangle:
            pos: self.center_x -s/2, self.center_y - s/2
            size: s, s
        Ellipse:
            pos: 200, 500
            size: s, s/2
        Line:
            # chaque point (x1,y1, x2,y2, ... xn,yn)
            points: (0,0, self.width/4, 100, self.width/2,0, self.width*3/4, 100, self.width, 0)
            width: 2

<CanvasExemple2>:
    canvas:
        Line:
            # chaque point (x1,y1, x2,y2, ... xn,yn)
            points: (0,self.height/2,self.width, self.height/2)
            width: 2
        Line:
            # chaque point (x1,y1, x2,y2, ... xn,yn)
            points: (self.width/2, self.height/2,self.width/2,0,self.width/2, self.height)
            width: 2

<CanvasExemple3>:
    canvas:
        Color:
            rgba: 1, 0, 0, 0.3
        Line:
            # center_x, center_y, rayon
            circle: (200, 200, 100)
            width: 2
        Line:
            # center_x, center_y, rayon_x, rayon_y
            ellipse: (500, 300, 100, 200)
            width: 4
        Color:
            rgba: 0, 0, 1, 1
        Line:
            # x, y, width, height
            rectangle: (400, 100, 300, 200)
            width: 2

<CanvasExemple4>:
    Button:
        pos: 0, 0
        text: "A"
        on_press: root.on_button_a_click()
