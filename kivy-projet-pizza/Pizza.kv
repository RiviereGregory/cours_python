#:import utils kivy.utils

MainWidget:

<MainWidget>:
    recycleView: recycleView
    RecycleView:
        id: recycleView
        viewclass: 'PizzaWidget'
        RecycleBoxLayout:
            default_size: None, dp(100)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<Badge@FitLabel>:
    color: 0, 0, 0, 1
    bold: True
    font_size: dp(10)
    padding: dp(8), dp(3)
    canvas.before:
        Rectangle:
            source:"images/badge.png"
            pos: self.pos
            size: self.size

<PizzaWidget>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.nom
            Badge:
                text: "VEGETARIENNE" if root.vegetarienne else ""
        Label:
            text: root.ingredients
            text_size: self.size
            halign: "left"
            valign: "center"
    Label:
        text: str(root.prix) + "â‚¬"
        text_size: self.size
        halign: "right"
        valign: "center"
