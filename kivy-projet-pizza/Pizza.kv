#:import utils kivy.utils
#:set color1 "#DD7835"
#:set color2 "#C8C8C8"

MainWidget:

<MainWidget>:
    recycleView: recycleView
    RecycleView:
        id: recycleView
        viewclass: 'PizzaWidget'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(16)

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<Badge@FitLabel>:
    color: 0, 0, 0, 1
    bold: True
    font_size: dp(10)
    padding: dp(8), dp(3)
    canvas.before:
        Rectangle:
            source:"images/badge.png"
            pos: self.pos
            size: self.size

<PizzaWidget>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.nom
                font_size: dp(22)
                bold: True
            Badge:
                text: "VEGETARIENNE" if root.vegetarienne else ""
        Label:
            text: root.ingredients
            text_size: self.size
            color: utils.get_color_from_hex(color2)
            halign: "left"
            valign: "center"
    FitLabel:
        text: str(root.prix) + "â‚¬"
        font_size: dp(20)
        color: utils.get_color_from_hex(color1)
        halign: "right"
        valign: "center"
