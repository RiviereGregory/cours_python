#:import menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            source: 'images/bg1.jpg'
            size: self.size
    menu_widget : menu_widget
    # Pour ne pas utiliser la fonction on_size en py
    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        pos_hint: {"x": 0, "top": 1}
        size_hint: 0.18, 0.18
